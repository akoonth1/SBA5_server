<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="/scripts/all.mjs" defer></script>
</head>
<body>
    <div class="container">
        <nav>

            <a href='/mart/newuser' class="button">Add New User</a>
            <a href='/mart/newitem' class="button">Add New Item</a>

        </nav>
        <br><br>
        <div id="app">
            <h1>All Users</h1>
            <ul>
                <% users.forEach(user => { %>
                    <li>
                        <h2><%= user.name %></h2>
                        <p>Money: <%= user.money %></p>
                        <p>Location: <%= user.location %></p>
                        <a href="/mart/users/<%= user.id %>/" class="button">Explore User</a>
                        <br><br>

                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</body>
</html>
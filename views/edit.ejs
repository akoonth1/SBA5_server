<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/style.css">
    <script src="/scripts/editor.mjs" defer></script>
</head>
<body>

    <div id="app" class="container">
        <nav>
            <a href='/mart/users/<%= id %>/items/1'" class="button">Buy Items</a>
            <a href='/mart/users/<%= id %>/pokemon'" class="button">Get Pokemon</a>
            <a href='/mart/newuser' class="button">Add New User</a>
            <a href='/mart/newitem' class="button">Add New Item</a>
            <a href='/mart/users/<%= id %>' class="button">Users</a>
        </nav>
    
    
        <h1 id="<%= id %>"><%= title %></h1>

        <form id="editor">
            <% fields.forEach(field => { %>
                <label for="<%= field.id %>"><%= field.label %>:</label>
                <input type="<%= field.type %>" id="<%= field.id %>" name="<%= field.name %>" value="<%= field.value %>" <%= field.required ? 'required' : '' %>><br><br>
            <% }) %>
            <button type="submit"><%= buttonText %></button>
        </form>
    </div>


    </body>
    </html>

